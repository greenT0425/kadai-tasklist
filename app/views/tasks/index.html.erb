<h1>タスク一覧</h1>
<table class="table table-striped">
	<thead>
	  <tr>
	    <th>id</th>
	    <th>ステータス</th>
	    <th>タスク</th>
	  </tr>
	</thead>
	<tbody>
		<% @tasks.each do |task| %>
			<tr>
				<td><%= link_to task.id,task %></td>
				<td><span class="badge"><%= task.status %></span></td>
				<td><%= task.content %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @tasks %>
<%= link_to '新規タスクの投稿', new_task_path %>